{
  "name": "Llama Assistant",
  "icon": "llama-icon.svg",
  "identifier": "com.da.popclip.extension.groqllama",
  "description": "A Llama Assistant",
  "note": "You will need an <a href=\"https://https://console.groq.com/keys\">API key</a>",
  "app": {
    "name": "Llama",
    "link": "https://groq.com"
  },
  "popclipVersion": 4069,
  "module": "llama.js",
  "entitlements": [
    "network"
  ],
  "options": [
    {
      "identifier": "apiUrl",
      "label": "API Endpoint",
      "type": "string"
    },
    {
      "identifier": "apikey",
      "label": "API Key",
      "type": "string"
    },
    {
      "identifier:": "model",
      "label": "Model",
      "type": "multiple",
      "defaultValue": "llama3-70b-8192",
      "values": ["llama-3.3-70b-versatile", "llama-3.1-8b-instant", "gemma2-9b-it", "mixtral-8x7b-32768", "deepseek-r1-distill-llama-70b"]
    },
    {
      "identifier": "prompt",
      "label": "Assistant",
      "type": "string"
    },
    {
      "identifier": "useTot",
      "label": "Append to Tot",
      "defaultValue": false,
      "type:": "boolean"
    },
    {
      "identifier": "totPage",
      "label": "Tot Page",
      "type": "multiple",
      "values": ["1", "2", "3", "4", "5", "6", "7"],
      "valueLabels": ["Dot 1", "Dot 2", "Dot 3", "Dot 4", "Dot 5", "Dot 6", "Dot 7"]
    }
  ]
}
